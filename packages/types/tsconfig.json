{
  "compilerOptions": {
    "target": "esnext",
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
      "react"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "node_modules"
  ]
}